<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/baby_item_name"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/babyItemQuantity"
                android:text="@string/app_name"
                android:layout_below="@id/baby_item_name"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/baby_item_color"
                android:text="@string/app_name"
                android:layout_below="@id/babyItemQuantity"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/babyItemSize"
                android:text="@string/app_name"
                android:layout_below="@id/baby_item_color"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/babyItemDate"
                android:text="@string/app_name"
                android:layout_below="@id/babyItemSize"
                android:textSize="18sp"
                android:paddingTop="4dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TableRow
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/babyItemDate">

                <Button
                    android:id="@+id/editButton"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:drawable/ic_menu_edit"/>

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:drawable/ic_menu_delete"/>

            </TableRow>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>